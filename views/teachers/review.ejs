                <li>Non nominare altri studenti.</li>
            </ul>
        </div>
        <!-- INPUT DELLA RECENSIONE SCRITTA -->
        <textarea id="recensione" name="review[msg]" class="recensione" placeholder="Scrivi ciÃ² che pensi..."></textarea>
