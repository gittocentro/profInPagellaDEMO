<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profinpagella - Valuta i tuoi professori</title>

    <link rel="stylesheet" href="/css/general-verification-code.css">
    <link rel="stylesheet" href="/css/media-queries/general-queries.css">
    <link rel="icon" type="image/png" href="/immagini-icone/favicon/faviconDEMO.png">

</head>
<body>

    <nav class="nav-2">
        <div class="contenitore-logo">
            <img class="logo" src="/immagini_icone/logo.jpg">
        </div>
    </nav>

    <div class="display-contenitore-verification-code">
        <section class="contenitore-verification-code">
            <img src="immagini_icone/210.Magic_.webp" width="200">
            <p>Inserisci la nuova password:</p>
            <form action="/pw_recover/verification/<%= pwToken._id %>?_method=PUT" method="POST" class="form-codice-di-verifica">
                <input type="password" name="password" class="input-codice-verifica">
                <button type="submit" class="bottone-codice-verifica">Invio</button>
            </form>
            <%= message %>
        </section>
    </div>
</body>
</html>